<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.medmax.potholedetector.main.SensorActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pothole_analyzer"
        android:text="@string/pothole_analyzer"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register_pothole"
        android:layout_gravity="center_horizontal"
        android:text="@string/register_new_pothole" />
</android.support.v7.widget.LinearLayoutCompat>
